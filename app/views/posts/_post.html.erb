<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        <%= "#{post.user.user_name}" %>
      </div>
    </div> <!-- post-head -->
    <div class="image center-block">
      <%= link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post) %>
    </div>
    <p class="caption">
      <%= post.caption %>
    </p>
  </div> <!-- post -->
</div> <!-- posts-wrapper row -->
